
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quran_background">

    <Button
        android:id="@+id/quranButton"
        style="@style/MainButton"
        android:text="@string/quran_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tafsirButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/tafsirButton"
        style="@style/MainButton"
        android:text="@string/tafsir_button"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/quranButton"
        app:layout_constraintBottom_toTopOf="@id/duaaButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/duaaButton"
        style="@style/MainButton"
        android:text="@string/duaa_button"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tafsirButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        android:id="@+id/activitymeun"
        layout="@layout/activity_meun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
